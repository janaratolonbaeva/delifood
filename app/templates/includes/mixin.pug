mixin basketCard(contentBasketCard)
	each item in contentBasketCard
		.basketPage__item.clearfix
			.basketPage__item-image
				img(src="uploads/category-img-1.jpg", alt="Product Image")
			.basketPage__item-content
				h5 Чизбургер-пицца
				.clearfix
					svg.with(width="25", height="25")
						use(xlink:href=`#ic-${item.with}`)
					.choice
						span.choice-title Размер: 
						span.choice-text 35см
					.choice
						span.choice-title Тесто: 
						span.choice-text Тонкое
			.category__basket-amount
				span -
				input(type="number", value="1")
				span +
			svg(width="15", height="15").cancel
				use(xlink:href="#ic-cancel")
			.category__basket-sum
				label
					input(type="number", value="452")
					| ₽

